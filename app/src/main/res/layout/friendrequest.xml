<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/justblack">

    <!-- Friend Request Title -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FRIEND REQUEST"
        android:textColor="@color/lightPink"
        android:textSize="24sp"
        android:fontFamily="@font/univers"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"/>

    <!-- Search EditText -->
    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_white_bg"
        android:fontFamily="@font/poppinsmedium"
        android:hint="Search for a user..."
        android:padding="12dp"
        android:textColorHint="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"/>

    <!-- RecyclerView for Friend Requests -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFriendRequests"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchEditText"/>

    <!-- Check Friend Requests Button -->
    <Button
        android:id="@+id/checkFriendRequestsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Friend Requests"
        android:textColor="@android:color/white"
        android:fontFamily="@font/univers"
        android:background="@drawable/button_green_bg"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewFriendRequests"/>

    <!-- Exit Button -->
    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:textColor="@android:color/white"
        android:fontFamily="@font/univers"
        android:background="@drawable/button_red_bg"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkFriendRequestsButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>
