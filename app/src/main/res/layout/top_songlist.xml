<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:background="@color/black">

    <!-- ViewPager for swiping between fragments -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/univers"
            android:text="Top Songs:"
            android:textAlignment="center"
            android:textColor="@color/pink"
            android:textSize="48sp" />

        <LinearLayout
            android:id="@+id/secondsong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_purple_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/univers"
                    android:text="2."
                    android:textColor="@color/white"
                    android:textSize="96sp" />

                <TextView
                    android:id="@+id/song2"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/univers"
                    android:text="TextView"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical|start"/> <!-- Adjusted layout_gravity here -->
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdsong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_pink_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/num3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/univers"
                    android:text="3."
                    android:textColor="@color/black"
                    android:textSize="96sp" />

                <TextView
                    android:id="@+id/song3"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/univers"
                    android:text="TextView"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical|start"/> <!-- Adjusted layout_gravity here -->
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forthsong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_blue_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/num4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/univers"
                    android:text="4."
                    android:textColor="@color/white"
                    android:textSize="96sp" />

                <TextView
                    android:id="@+id/song4"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/univers"
                    android:text="TextView"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical|start"/> <!-- Adjusted layout_gravity here -->
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifthsong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_yellow_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/num5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/univers"
                    android:text="5."
                    android:textColor="@color/black"
                    android:textSize="96sp" />

                <TextView
                    android:id="@+id/song5"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/univers"
                    android:text="TextView"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical|start"/> <!-- Adjusted layout_gravity here -->
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>